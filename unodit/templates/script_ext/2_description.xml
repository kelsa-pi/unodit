<?xml version='1.0' encoding='UTF-8'?>

<description xmlns="http://openoffice.org/extensions/description/2006"
             xmlns:xlink="http://www.w3.org/1999/xlink">

    <!-- 
The description.xml is a means to provide additional useful information, 
such as dependencies, license and update information. The file must be 
located in the root of the extension and the name is case sensitive.

Developer's Guide link:
https://wiki.openoffice.org/wiki/Documentation/DevGuide/Extensions/description.xml

Tip: When edited open file in browser to check for errors.
    -->


    <!-- 
    Unique identifier
    
    -->
    <identifier value="${EXTENSION_IDENTIFIER_DOMAIN}.${EXTENSION_IDENTIFIER_APP}"/>

    <version value="${EXTENSION_VERSION}"/>

    <platform value="${EXTENSION_PLATFORM}"/>

    <publisher>
        <name xlink:href="mailto:${EXTENSION_MAILTO}">${EXTENSION_PUBLISHER}</name>
    </publisher>

