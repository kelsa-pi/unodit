    <!-- 
    Short extension description in the Extension Manager dialog 
    Directory: description
    -->
    <extension-description>
        <src xlink:href="${APP_DESCRIPTION_DIR}/${APP_DESCRIPTION}" lang="en"/>
    </extension-description>

</description>
